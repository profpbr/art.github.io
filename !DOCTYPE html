<body>

  <h1>Course Title Here</h1>

  <!-- Tabs -->
  <div class="tab">
    <button class="tablinks" onclick="openTab(event, 'Syllabus')" id="defaultOpen">Syllabus</button>
    <button class="tablinks" onclick="openTab(event, 'TLEP')">TLEP</button>
    <button class="tablinks" onclick="openTab(event, 'Module1')">Module 1</button>
    <button class="tablinks" onclick="openTab(event, 'Module2')">Module 2</button>
  </div>

  <!-- Tab content -->
  <div id="Syllabus" class="tabcontent">
    <h3>Syllabus</h3>
    <p>Content for syllabus goes here.</p>
  </div>

  <div id="TLEP" class="tabcontent">
    <h3>TLEP</h3>
    <p>Content for TLEP goes here.</p>
  </div>

  <div id="Module1" class="tabcontent">
    <h3>Module 1</h3>
    <p>Content for Module 1 goes here.</p>
  </div>

  <div id="Module2" class="tabcontent">
    <h3>Module 2</h3>
    <p>Content for Module 2 goes here.</p>
  </div>

  <script>
    function openTab(evt, tabName) {
      let i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(tabName).style.display = "block";
      evt.currentTarget.className += " active";
    }

    // Open default tab
    document.getElementById("defaultOpen").click();
  </script>

</body>
