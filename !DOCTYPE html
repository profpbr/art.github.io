  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Centered course title */
    h1 {
      text-align: center;
      background-color: #4CAF50;
      color: white;
      padding: 20px 0;
      margin: 0;
    }

    /* Tab container */
    .tab {
      overflow: hidden;
      background-color: #f1f1f1;
      display: flex;
      justify-content: center;
    }

    /* Tab links */
    .tab button {
      background-color: inherit;
      border: none;
      outline: none;
      padding: 14px 20px;
      cursor: pointer;
      transition: 0.3s;
      font-size: 16px;
    }

    .tab button:hover {
      background-color: #ddd;
    }

    .tab button.active {
      background-color: #4CAF50;
      color: white;
    }

    /* Tab content */
    .tabcontent {
      display: none;
      padding: 20px;
      border-top: 1px solid #ccc;
    }
  </style>
